# 服务器配置
PORT=5200                   # 开发环境使用5200，测试环境建议使用不同端口
NODE_ENV=development        # development, test 或 prod

# 数据库配置
DB_TYPE=postgres            # postgres 或 mysql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=moetrip             # 测试环境使用 moetrip_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_SCHEMA=public

# JWT配置
JWT_SECRET=your-secret-key  # 测试环境使用 test_secret_key
JWT_EXPIRES_IN=24h          # 测试环境使用较短时间如 1h

# 文件上传配置
UPLOAD_DIR=uploads          # 测试环境使用 uploads_test
MAX_FILE_SIZE=5242880       # 5MB

# 跨域配置
CORS_ORIGIN=http://localhost:3000
